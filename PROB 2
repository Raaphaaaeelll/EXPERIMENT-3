#include <iostream>
#include <string>
using namespace std;

int main()
{
	const int PROVINCE = 3;
	const int WEEK = 7;
	int a, b;
	int temperature[PROVINCE][WEEK];
	
	cout << "Enter temperature of Province A, Province B and Province C for a week:" << endl;
	for(a = 0; a < PROVINCE; a++)	
	{
		for(b = 0; b < WEEK; b++)
		{
			cout << "Province " << a + 1 << ", Day " << b + 1 << ": ";
			cin >> temperature[a][b];
		}
	}
	
	cout << "Displaying values: " << endl;
	for(a = 0; a < PROVINCE; a++)
	{
		for(b = 0; b < WEEK; b++)
		{
			cout << "Province " << a + 1 << ", Day " << b + 1 << " = " << temperature[a][b] << endl;
		}
	}
	
	return 0;
}
